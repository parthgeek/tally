{
  "name": "@nexus/categorizer",
  "version": "1.0.0",
  "description": "Hybrid categorization engine with deterministic rules and LLM scoring",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ignore-pattern '**/*.spec.ts' --ignore-pattern '**/__tests__/**' --ignore-pattern '**/validator.ts'",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "keywords": [
    "categorization",
    "machine-learning",
    "financial"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@nexus/analytics": "workspace:*",
    "@nexus/types": "workspace:*",
    "@supabase/supabase-js": "^2.0.0",
    "safe-regex": "^2.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "eslint": "^9",
    "fast-check": "^3.0.0",
    "typescript": "^5",
    "vitest": "^1.0.0"
  }
}