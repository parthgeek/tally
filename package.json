{
	"name": "nexus",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "pnpm --filter web dev",
		"build": "pnpm -r build",
		"build:railway": "pnpm --filter @nexus/categorizer build && pnpm --filter web build",
		"test": "pnpm -r test",
		"test:categorization": "pnpm --filter @nexus/categorizer test",
		"test:e2e": "vitest run --config vitest.e2e.config.ts",
		"test:integration": "npx tsx scripts/verify-gemini-integration.ts",
		"test:integration:openai": "npx tsx scripts/verify-openai-integration.ts",
		"test:edge-functions": "npx tsx scripts/test-edge-functions.ts",
		"test:all": "pnpm run test:categorization && pnpm run test:e2e && pnpm run test:integration",
		"test:security": "pnpm --filter web run test:unit -- --grep \"security|rate.limit|validation|webhook\"",
		"test:api-security": "pnpm --filter web run test:unit -- src/test/api-security.spec.ts",
		"test:rate-limit": "pnpm --filter web run test:unit -- src/lib/rate-limit-redis.spec.ts",
		"test:validation": "pnpm --filter web run test:unit -- src/lib/validation-enhanced.spec.ts",
		"e2e": "pnpm --filter web exec playwright test",
		"lint": "eslint . --ext .ts,.tsx",
		"typecheck": "tsc -b",
		"security:audit": "pnpm audit --audit-level high",
		"security:outdated": "pnpm outdated",
		"security:scan": "npx @cyclonedx/cyclone-cli generate -o sbom.json && npx osv-scanner --format json --output security-report.json sbom.json",
		"migrate": "pnpm --filter @nexus/db run migrate",
		"seed": "pnpm --filter @nexus/db run seed",
		"functions:sync": "bash scripts/sync-edge-functions.sh",
		"functions:deploy": "bash scripts/deploy-edge-functions.sh",
		"functions:cleanup": "bash scripts/cleanup-edge-functions.sh",
		"functions:dev": "cd apps/edge && deno task test:watch",
		"functions:test": "cd apps/edge && deno task test"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@supabase/supabase-js": "^2.56.0",
		"@types/node": "^24.3.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"dotenv": "^16.6.1",
		"dotenv-cli": "^10.0.0",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vitest": "^1.0.0"
	},
	"dependencies": {
		"zod": "^4.1.1"
	}
}
